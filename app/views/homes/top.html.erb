<div class="container" style="font-family: 'Noto Sans JP',serif;">
    <div class="row pb-5 pt-2">

        <div class="col-sm-3 text-center">
          <%= render 'public/products/genres_search', genres: @genres %>
        </div>

        <div class="col-sm-9">
          <h2><span class="under-line">新着商品</span></h2>
          <div class="row">

            <% @products.last(4).each do |product| %>
              <div class="col-sm-3">
                <div class="card">

                  <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                    <%= link_to product_path(product.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                      <%= attachment_image_tag(product, :image, :fill, 200, 180, class: 'card-img-top rounded') %><br>
                        <%= product.name %><br>
                        ¥<%= product.price.to_s(:delimited, delimiter: ',') %>
                      <% end %>
                  </div>

                </div>
              </div>
            <% end %>

          </div>

          <div class="text-right">
            <%= link_to "全ての商品を見る ＞", products_path %>
          </div>
        </div>

    </div>
