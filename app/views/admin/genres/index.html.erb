<div class="flash">
	<%= flash[:notice] %>
</div>

<div class="container mt-5 mb-5">

  <h2>ジャンル追加・一覧</h2><br>

  <% if @genre.errors.any? %>
        <%= @genre.errors.count %>errors prohibited this obj from being saved:
        <% @genre.errors.full_messages.each do |message| %><br>
          ・<%= message %>
        <% end %>
      <% end %>

  <%= form_for(@genre, url: admin_genres_path) do |f| %>
    <div class="form-genre">
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name, class:"col-md-2" %>
      <%= f.submit "新規登録" , class:"btn btn-sm btn-dark" %>
    </div>
  <% end %>

  <div class="row md-5 mt-5">
    <!-- ofsetは左右の余白 -->
    <table class="table col-md-4">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-sm btn-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>