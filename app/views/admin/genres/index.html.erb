  <div class="container mt-5 mb-5">
  <div class="row"><br>
        <h2>ジャンル追加・一覧</h2>

      <%= form_for(@genre, url: admin_genres_path) do |f| %>
          <div class="form-group col-md-10">

            <%= f.label :ジャンル %>
            <%= f.text_field :name,class: "col-md-4" %>
            <%= f.submit "追加" ,class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
    <div class="row mt-5">
      <!-- ofsetは左右の余白 -->
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(@genre.id), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    </div>