<div class="container mt-5 mb-5">
    <h2>商品編集</h2>

    <div class="product-edit">
        <div class="validates">
          <% if @product.errors.any? %>
              <%= @product.errors.count %> 件の入力ミスがあります。
              <% @product.errors.full_messages.each do |message| %><br>
                  ・<%= message %>
              <% end %>
          <% end %>
        </div>

        <%= form_with model:@product, url: admin_product_path, local:true do |f| %>
            <dl>

                <div class="edit-form-group">
                  <dt>商品画像</dt>
                  <dd><%= f.attachment_field :image %></dd>
                </div>
                <div class="edit-form-group">
                  <dt>商品名</dt>
                  <dd><%= f.text_field :name %></dd>
                </div>
                <div class="edit-form-group">
                  <dt>商品説明</dt>
                  <dd><%= f.text_area :caption %></dd>
                </div>
                <div class="edit-form-group">
                  <dt>ジャンル</dt>
                  <dd><%= f.collection_select :genre_id, Genre.all, :id, :name %></dd>
                </div>
                <div class="edit-form-group">
                  <dt>税抜価格</dt>
                  <dd><%= f.text_field :price %></dd>
                </div>
                <div class="field">
                  <dt>販売ステータス</dt>
                  <dd>
                    <%= f.radio_button :is_active, true %>
                    <%= f.label :is_active, "販売中" %>
                    <%= f.radio_button :is_active, false %>
                    <%= f.label :is_active, "売切れ" %>
                  </dd>
                </div>
            </dl>

            <div class="form-success">
              <%= f.submit "変更を保存", class:"btn btn-sm", style: "background-color: #cbb05e; color: black;" %>
            </div>

          <% end %>

    </div>
</div>