<div class="container">
  <div class="row">
    <h4>会員一覧</h4>
  </div>

  <div class="row">
      <div class="offset-md-1 col-md-10 offset-md-1">

    <table class="table">
      <thead>
        <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
        </tr>
      </thead>
    
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
        <td><%= customer.id %></td>
        <td><%= link_to "/admin/customers/#{customer.id}" do %>
                <%= customer.last_name %><%= customer.first_name %>
            <% end %>
        </td>
        <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
        <td><strong><p class="text-success">有効</p></strong></td>
            <% else %>
        <td><strong><p class="text-secondary">退会</p></strong></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  
    <%= paginate @customers %>
    </div>
  </div>
</div>

