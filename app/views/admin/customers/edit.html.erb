

<div class="container">
    <div class="row">
        <h4><%= @customer.last_name%>　<%= @customer.first_name %>　様の会員情報編集</h4>
    </div>




    <div class="row">
        <div class="offset-md-1 col-md-10 offset-md-1">
          <div class="validates">
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %> 件の入力ミスがあります。
        <% @customer.errors.full_messages.each do |message| %><br>
          ・<%= message %>
        <% end %>
      <% end %>
    </div>

        <%= form_with model:@customer, url: "/admin/customers/#{@customer.id}", local:true do |f| %>

        <table class="admin_customer_edit">
            <tr>
              <th>会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th>氏名</th>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :post_cord %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, size: "42" %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :phone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <td>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, "有効", value: false %>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, "無効", value: true %>
              </td>
            </tr>
             <tr><th></th>
             <td><%= f.submit '変更を保存',class:"btn btn-success" %></td></tr>
        </table>
        <% end %>
    </div>
</div>


