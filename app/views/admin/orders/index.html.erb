
    <div class="container mt-5 mb-5">
    <h2>注文履歴一覧</h2>
    </div>


  <div class="row">
      <div class="offset-md-1 col-md-10 offset-md-1">

    <table class="table">
      <thead>
        <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
        <td><%= link_to "/admin/orders/#{order.id}" do %>
            <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %></td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %>
        </td>
        <td><%= order.order_details.sum(:quantity) %></td>
        <td><%= order.status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @orders %>
    </div>
