<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
        <div class="mypage",style="text-align:center">
        <h2 class="title">マイページ</h2>
 
      <table class="update">
        <tr><th><h5><strong>登録情報</strong></h5></th>
          <td><%= link_to "編集する", edit_customers_path, class:"btn btn-secondary btn-sm" %></td>
        </tr>
      </table>
      
      <table class="customer_info">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_cord %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
  
    
       <!--配送先・注文履歴リンク-->
       <table class="links">
         <tr>
        <th><h5><strong>配送先</strong></h5></th>
           <td><%= link_to "一覧を見る", shippings_path, class:"btn btn-sm btn-dark" %></td>
         </tr>
       
          <tr><th><h5><strong>注文履歴</strong></h5></th>
          <td><%= link_to "一覧を見る", orders_path, class:"btn btn-sm btn-dark" %></td>
        </tr>
        </table>
    </div>
  </div>
</div>
</div>