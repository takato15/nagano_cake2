      <h2>会員情報編集</h2>
    
      <%= form_with model:@customer, url: customers_path, local:true do |f| %>

             <h2>氏名</h2>
               <%= f.text_field :last_name %>
               <%= f.text_field :first_name %>
            
          
             <h2>フリガナ</h2>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :first_name_kana %>
        
              <h2>郵便番号</h2>
              <%= f.text_field :postal_code %>
             
          
           
               <h2>住所</h2>
              <%= f.text_field :address %>
           
         
               <h2>電話番号</h2>
              <%= f.text_field :telephone_number %>
        
             
            
               <h2>メールアドレス</h2>
              <%= f.text_field :email %>
             
             
             
            
             <%= f.submit '編集内容を保存',class:"btn btn-success" %>
             <% end %>
             <%= link_to '退会する',unsubsclibe_path,class:"btn btn-danger" %>