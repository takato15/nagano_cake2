<div class="container">
  <div class="row"> 
  　  <div class="col-sm-1"></div>
    <div class="form-group">
     <h4 class="mt-5 bg-light">配送先登録／一覧</h4>
    </div>
  </div>
  

  <%= form_with model: @shipping,url: shippings_path, local:true do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>郵便番号(ハイフンなし)</label>
        </div>
        <div class="col-sm-2">
        <%= f.text_field :post_cord, placeholder: "0000000", class:"form-control" %>
        </div>
      </div>
    </div>
    
   <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>住所</label>
        </div>
        <div class="col-sm-4">
         <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %><br>
        </div>
      </div>
   </div>
  
   <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label>宛名</label>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :name, placeholder: "令和道子", class:"form-control" %><br>
        </div>
        <div class="col-sm-1"></div>
        <div>
          <%= f.submit '新規登録', class:'btn btn-success'  %>
        </div>
     </div>
    </div>
  <% end %>

<div class="row">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col"></th>
      <th colspan = "3" ></th>
    </tr>
  </thead>
  <% @shippings.each do |s| %>
  <tbody>
    <td><%= s.post_code %></td>
    <td><%= s.address %></td>
    <td><%= s.name %></td>
    <td><%= link_to "編集する" , edit_shippings_path(s) %></td>
    <td><%= link_to "削除する", "/public/shippings/#{s.id}", method: :delete, "data-confirm" => "本当に消しますか?" %></td>
  </tbody>
  <% end %>
</table>
</div>
</div>